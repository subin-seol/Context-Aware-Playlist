<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_surface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_16">

        <!-- Welcome Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/welcomeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="@dimen/radius_20"
            app:cardElevation="@dimen/elev_2"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/space_16">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcomeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back Alex!"
                        android:textColor="@color/text_primary"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/welcomeSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_4"
                        android:text="Your music, perfectly matched to your world"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/weatherStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:text="Weather: —"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:includeFontPadding="false" />

                    <TextView
                        android:id="@+id/lightValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:text="Light: —"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:includeFontPadding="false" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/welcomeIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_music_note_24"
                    android:contentDescription="@string/app_name"
                    app:tint="@color/teal_accent"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Create My Vibe Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/createVibeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="@dimen/radius_20"
            app:cardElevation="@dimen/elev_2"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/space_16">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Create My Vibe"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSnap"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text=""
                    app:icon="@drawable/camera"
                    app:iconGravity="textStart"
                    app:cornerRadius="14dp"
                    app:strokeColor="@color/text_secondary"
                    app:strokeWidth="1dp"
                    app:iconTint="@color/text_primary"
                    app:rippleColor="@color/divider_8" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPreviewImage"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="View Image"
                    android:textAllCaps="false"
                    android:textColor="@color/text_primary"
                    app:cornerRadius="14dp"
                    app:strokeColor="@color/text_secondary"
                    app:strokeWidth="1dp"
                    app:iconTint="@color/text_primary"
                    app:rippleColor="@color/divider_8"
                    android:visibility="gone"/>

                <Space
                    android:layout_width="@dimen/space_12"
                    android:layout_height="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGo"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="GO"
                    app:cornerRadius="14dp"
                    app:backgroundTint="@color/teal_accent"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Content Container - Everything below Create My Vibe -->
        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Current Mood Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/currentMoodCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:visibility="gone"
                app:cardBackgroundColor="@color/card_dark"
                app:cardCornerRadius="@dimen/radius_20"
                app:cardElevation="@dimen/elev_2"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Mood"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/space_12" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/contextTagsGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacing="@dimen/space_8" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Playlist Suggestions Section -->
            <LinearLayout
                android:id="@+id/playlistSuggestionsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Playlist Suggestions"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/space_12" />

                <LinearLayout
                    android:id="@+id/playlistCardsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <!-- Stats row -->
            <LinearLayout
                android:id="@+id/statsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@color/card_darker"
                    android:padding="@dimen/space_16"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/space_8"
                    android:elevation="2dp"
                    android:clipToOutline="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/teal_accent"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Playlists Found"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@color/card_darker"
                    android:padding="@dimen/space_16"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/space_8"
                    android:elevation="2dp"
                    android:clipToOutline="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.5h"
                        android:textColor="@color/blue_accent"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listening Time"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@color/card_darker"
                    android:padding="@dimen/space_16"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:elevation="2dp"
                    android:clipToOutline="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85%"
                        android:textColor="@color/text_primary"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Match Rate"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Recent Activity -->
            <TextView
                android:id="@+id/recentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_24"
                android:text="Recent Activity"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="18sp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/recentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12"
                app:cardBackgroundColor="@color/card_dark"
                app:cardCornerRadius="@dimen/radius_16"
                app:cardElevation="@dimen/elev_2"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_16"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/recentName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Morning Walk Vibes"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/recentTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/space_12"
                        android:paddingRight="@dimen/space_12"
                        android:paddingTop="@dimen/space_4"
                        android:paddingBottom="@dimen/space_4"
                        android:background="@color/chip_bg"
                        android:text="Walking"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:includeFontPadding="false"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btn_fetch_places"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fetch Nearby Places" />

        </LinearLayout>

        <!-- Loading Container - Shows when generating -->
        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:indeterminateTint="@color/teal_accent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:text="Generating your playlists..."
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:text="This may take a few moments"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
