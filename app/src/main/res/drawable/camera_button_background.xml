<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Inner circle color -->
            <size android:width="64dp" android:height="64dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#888888" /> <!-- Outer ring color and thickness -->
            <size android:width="72dp" android:height="72dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>